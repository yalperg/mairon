{
  "name": "mairon",
  "version": "1.0.1",
  "keywords": [
    "rule-engine",
    "rules",
    "engine",
    "business-rules",
    "workflow",
    "automation"
  ],
  "description": "Mairon is a lightweight, type-safe rule engine. Define complex business rules declaratively and evaluate them dynamically at runtime.",
  "license": "MIT",
  "author": {
    "name": "Yunus Alper GÃ¶l",
    "url": "https://github.com/yalperg"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yalperg/mairon.git"
  },
  "bugs": {
    "url": "https://github.com/yalperg/mairon/issues"
  },
  "homepage": "https://github.com/yalperg/mairon#readme",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "docs",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && npm run build:js && npm run build:types",
    "build:js": "node esbuild.config.js",
    "build:types": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "dev": "npm run clean && NODE_ENV=development node esbuild.config.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.20",
    "@types/node": "^22.15.29",
    "esbuild": "^0.25.5",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "zod": "^4.1.12"
  }
}
