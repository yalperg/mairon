{
  "name": "sauron",
  "version": "1.0.0",
  "keywords": [
    "rule-engine",
    "rules",
    "engine",
    "business-rules",
    "workflow",
    "automation"
  ],
  "description": "Sauron is a powerful, flexible, and type-safe rule engine for TypeScript/JavaScript. Define complex business rules declaratively and execute them efficiently against your data.",
  "license": "MIT",
  "author": {
    "name": "Yunus Alper GÃ¶l",
    "url": "https://github.com/yalperg"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yalperg/sauron.git"
  },
  "bugs": {
    "url": "https://github.com/yalperg/sauron/issues"
  },
  "homepage": "https://github.com/yalperg/sauron#readme",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "docs",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rm -rf ./dist && node esbuild.config.js",
    "dev": "rm -rf ./dist && NODE_ENV=development node esbuild.config.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "test": "jest --testPathIgnorePatterns='perf'",
    "test:watch": "jest --watch --testPathIgnorePatterns='perf'",
    "test:coverage": "jest --coverage --testPathIgnorePatterns='perf'"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.20",
    "@types/node": "^22.15.29",
    "esbuild": "^0.25.5",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "zod": "^4.1.12"
  }
}
